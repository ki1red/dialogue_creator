<Window x:Class="DialogsCreator.SignWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DialogsCreator"
        mc:Ignorable="d"
        Title="Вход" Height="192" Width="382" WindowStartupLocation="CenterScreen" ResizeMode="CanMinimize">
    <Grid>
        <StackPanel Name="stackPanel" Margin="10,10,10,52">
            <RadioButton Name="admin" GroupName="choice" Click="Choice_Click" FontSize="18">Администратор</RadioButton>
            <RadioButton Name="scenarist" GroupName="choice" Click="Choice_Click" FontSize="18">Сценарист</RadioButton>
            <RadioButton Name="translator" GroupName="choice" Click="Choice_Click" FontSize="18">Переводчик</RadioButton>
        </StackPanel>
        <Button Name="ButtonSign" IsEnabled="False" Click="ButtonSign_Click" Content="Войти" FontSize="18" HorizontalAlignment="Center" Margin="0,0,0,19" Width="102" Height="28" VerticalAlignment="Bottom"/>
    </Grid>
</Window>
