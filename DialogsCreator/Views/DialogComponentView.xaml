<UserControl x:Class="DialogsCreator.Views.DialogComponentView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DialogsCreator.Views"
             mc:Ignorable="d">
    <Border BorderThickness="2" Name ="OutSideBorder"  CornerRadius="8" BorderBrush="#FF020202" Background="#FF101010"  MouseLeftButtonDown="DialogComponentView_MouseLeftButtonDown" MouseLeftButtonUp="DialogComponentView_MouseLeftButtonUp" MouseMove="DialogComponentView_MouseMove" Width = "400">
        <StackPanel Name="OptionStackPanel"  Margin="5,5,5,10">
            <Border Padding="10,5,10,5">
                <Grid Name="Header">
                    <TextBlock Name="TextBlockComponentName" FontSize="24" FontFamily="Bookman Old Style" HorizontalAlignment="Center" VerticalAlignment="Center" Text="The Dlog 1" FontWeight="Bold"  TextAlignment="Center" Grid.Column="1" Foreground="#FF13A9F7" />
                    <ContentPresenter  Grid.ColumnSpan="2" Margin="0,5,0,5"/>
                </Grid>
            </Border>
            <Rectangle Height="5"  Width="385" Fill="#FF13A9F7" RadiusX="2" RadiusY="5" Margin="0,10,0,0"/>
        </StackPanel>
    </Border>
</UserControl>