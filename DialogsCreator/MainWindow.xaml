<Window x:Class="DialogsCreator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DialogsCreator"
        mc:Ignorable="d"
        Title="Создатель диалогов" Height="688" Width="962" >

    <Grid Height="678" VerticalAlignment="Top">
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="0*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Menu Height="25" VerticalAlignment="Top" Name="top_menu" Grid.ColumnSpan="2">
            <MenuItem Header="Файл">
                <MenuItem Header="Создать" Name="CreateFile" Click="CreateFile_Click"></MenuItem>
                <MenuItem Header="Открыть" Name="OpenFile" Click="OpenFile_Click"></MenuItem>
                <MenuItem Header="Сохранить" Name="SaveFile" Click="SaveFile_Click"></MenuItem>
                <MenuItem Header="Сохранить как" Name="SaveAsFile" Click="SaveFile_Click"></MenuItem>
                <Separator />
                <MenuItem Header="Выйти" ></MenuItem>
            </MenuItem>
            <MenuItem Header="Редактировать" ></MenuItem>
        </Menu>

        <DataGrid Name="datagrid"
            d:ItemsSource="{d:SampleData ItemCount=5}" Margin="41,36,40,0" Grid.Column="1" Height="613" VerticalAlignment="Top"/>


        <Expander Header="Создание основного текста диалога" Name="gb_create_base_text" Margin="29,36,74,0" Height="613" VerticalAlignment="Top">
            <Grid Background="#FFE5E5E5" Height="590" VerticalAlignment="Top">

                <TextBox Name="textbox_name" Margin="10,24,40,0" TextWrapping="Wrap" VerticalAlignment="Top"/>
                <TextBox Name="textbox_text" Margin="10,63,40,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="79"/>
                <CheckBox Content="Звук" Name="cb_sound" Click="cb_sound_Click" HorizontalAlignment="Left" Margin="10,147,0,0" VerticalAlignment="Top"/>
                <CheckBox Content="Картинка" Name="cb_image" Click="cb_image_Click" HorizontalAlignment="Left" Margin="76,147,0,0" VerticalAlignment="Top"/>
                <CheckBox Content="Ответы" Name="cb_answers" Click="cb_answers_Click" HorizontalAlignment="Left" Margin="170,147,0,0" VerticalAlignment="Top"/>
                <Button Content="Добавить" HorizontalAlignment="Left" Margin="248,145,0,0" VerticalAlignment="Top" Width="103"/>


                <Expander Header="Добавление звука диалога" Name="gb_add_sound" Margin="10,174,10,318">
                    <Grid Background="AliceBlue">

                    </Grid>
                </Expander>
                <Expander Header="Добавление картинки диалога" Name="gb_add_image" Margin="10,277,10,215">
                    <Grid Background="CadetBlue">

                    </Grid>
                </Expander>
                <Expander Header="Добавление ответов на диалог" Name="gb_add_answers" Margin="10,380,10,10">
                    <Grid Background="AliceBlue">

                    </Grid>
                </Expander>

                <Label Content="Автор" HorizontalAlignment="Left" Margin="8,-2,0,0" VerticalAlignment="Top"/>
                <Label Content="Описание" HorizontalAlignment="Left" Margin="8,39,0,0" VerticalAlignment="Top"/>
            </Grid>
        </Expander>

    </Grid>
</Window>
