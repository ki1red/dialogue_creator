        </StackPanel>
        <Button Name="button_sign" Click="buttin_sign_Click" Content="Войти" HorizontalAlignment="Center" Margin="0,88,0,0" VerticalAlignment="Top" IsEnabled="False" Width="102"/>
    </Grid>
